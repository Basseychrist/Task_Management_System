<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/_head') %> <%-- Include the head partial --%>
</head>
<body>
    <%- include('../partials/_header') %> <%-- Include the header partial (which includes navigation) --%>
    <main class="container">
        <% if (messages && messages.error_msg) { %>
            <div class="alert alert-danger"><%= messages.error_msg %></div>
        <% } %>
        <% if (messages && messages.success_msg) { %>
            <div class="alert alert-success"><%= messages.success_msg %></div>
        <% } %>

        <%- body %>
    </main>
    <%- include('../partials/_footer') %> <%-- Include the footer partial --%>
    <script src="/js/main.js"></script>
</body>
</html>
